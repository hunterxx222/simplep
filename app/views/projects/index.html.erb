<div class="col-sm-10 offset-sm-1" style="height:95%;top:2.5%">
  <div class="card sameheight-item items col-sm-12" style="height: 100%;">
    <div class="card-header bordered">
          <% if current_team %>
            <h3><strong><%= current_team.name %> Projects</strong></h3>
          <% end %>
            <div class="header-block pull-right">
              <%= link_to 'New Project', new_project_path, remote: true, data: { toggle: "modal", target: "#ajax-modal-project" },class: 'btn btn-primary'%>
            </div>
          </div>

          <div class="row placeholders">
            <div class="center-container">
              <table class="table">
                <tbody class="projects">
                  <% if current_team %>
                    <% current_team.projects.each do |project| %>
                    <tr id=<%=project.id%> >
                      <%= render 'project',project: project %>
                    </tr>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
      </div>
    </div>
    <%= render '/projects/dialog'%>
