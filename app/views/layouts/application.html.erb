<!DOCTYPE html>
<html>
  <head>
    <title>Simplep</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- This maks it mobile responsive -->

  </head>

  <body>

    <nav class="navbar navbar-default" role="navigation" id="navbar">
      <div class="navbar-header">
        <%= link_to "<i class='glyphicon glyphicon-home'></i>&nbsp; Home".html_safe, root_path, class: "navbar-brand #{'active' if current_page?(root_path)}" %>

        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

        <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-2">
          <ul class="nav navbar-nav">
            <li>
              <li><%= link_to "<i class='glyphicon glyphicon-envelope'></i>&nbsp; Contact Us".html_safe, contactus_path, class: "#{'active' if current_page?(contactus_path)}" %></li>
              <li><%= link_to "<i class='glyphicon glyphicon-user'></i>&nbsp; About Us".html_safe, aboutus_path, class: "#{'active' if current_page?(aboutus_path)}" %></li>
            </li>
          </ul>
        </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
