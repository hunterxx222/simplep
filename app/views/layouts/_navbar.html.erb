<section class="right-navbar-menu">
    <div class="btn-group pull-right">
        <div class="dropdown">
            <button class="btn btn-primary btn-sm dropdown-toggle rounded-s" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_user.name %>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <%= link_to edit_user_registration_path(current_user), class: 'dropdown-item btn-sm' do %>
                <i class="fa fa-user"></i>
                Profile
                <% end %>
                <%= link_to destroy_user_session_path, :method=>'delete', :class => 'dropdown-item btn-sm' do %>
                <i class="fa fa-power-off"></i>
                Log out
                <% end %>
                <div class="dropdown-divider"></div>
                <% current_user.my_team.each do |team| %>
                <%= link_to team.name, switch_path(:team_id => team.id), class: "dropdown-item btn-sm" %>
                <% end %>
            </div>
        </div>

    <li class="navbar-brand notifications new">

        <a href="/notifications/set_notifications.js" data-method='POST' data-remote="true" data-toggle="dropdown">
            <i class="fa fa-bell-o"></i>
            <sup>
                <span class="counter"><%= new_feeds_icon(notification_count)%></span>
            </sup>
        </a>
        <div class="dropdown-menu dropdown-menu-right animated flipInX">
            <ul class="notifications-container list-group"></ul>

            <footer>
                <ul>
                    <li>
                        <a href="<%= notifications_path %>">View All</a>
                    </li>
                </ul>
            </footer>
        </div>
    </li>
</section>
