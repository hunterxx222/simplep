<div class="container" style="background:lightblue">
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">
				<% if current_team %>
					<h1><%= current_team.name %></h1>
					<% end %>
			</h1>
		</div>
		<div class="member-list">
			<table class="col-md-9 col-md-offset-3 tble-bordered table-striped tablecondensed cf">
				<thead class="cf">
					<tr>
						<th>Email</th>
						<th>Role</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= @team.owner.email %></td>
						<td>owner</td>
					</tr>
					<% @members.each do |m| %>
					<tr>
						<td data-title="Email"><%= m.member.email %></td>
						<td data-title="Name"> member</td>
					</tr>
					<% end %>
					<tr>
						<td>
							<%= render 'memberships/form' , locals: [@team, Membership.new]%>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
