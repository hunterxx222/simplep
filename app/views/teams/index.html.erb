<div class="col-sm-10 offset-sm-1" style="height:95%;top:2.5%">
  <div class="card sameheight-item items col-sm-12" style="height: 100%;">
    <div class="card-header bordered">
        <h3><strong>Your Teams</strong></h3>
          <div class="header-block pull-right">
            <%= link_to 'Create Team', new_team_path, remote: true, data: { toggle: "modal", target: "#ajax-modal-project" }, class: 'btn btn-outline-primary', style: "float:right" %><br><br>
          </div>
      </div>
          <table class="table table-hover table-striped">
            <thead>
              <th>
                Name
              </th>
              <th></th>
            </thead>
            <tbody class="teams">
              <% @teams.each do |team|%>
              <tr id=<%= team.id %> >
                <%= render 'team', team: team %>
              </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>
