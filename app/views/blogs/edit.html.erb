<div class="col-sm-10 offset-sm-1" style="height:95%;top:2.5%">
  <div class="card sameheight-item items col-sm-12" style="height: 100%;">
      <div class="card-header">
        <h2 class="form-signin-heading">New Project Blog</h2>
      </div>
    <div class="card-block">
    <%= form_for([@project, @blog]) do |f| %>
          <%= f.label :status %><br />
          <%= f.select :status, options_for_select([ "Ahead","On Track", "Late" ], "On Track"),:class=> "form-control" %>
          <%= f.label :title %><br />
          <%= f.text_field :title, :class=> "form-control" %>
          <%= f.label :content %><br />
          <%= f.text_area :content, rows: 15, :class=> "form-control" %><br />
        <div class="actions">
          <%= f.submit "Update", :class=> "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
