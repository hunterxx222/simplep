<div class="col-sm-10 offset-sm-1" style="height:95%;top:2.5%;">
        <div class="row" style="height: 100%;">
            <div class="center-container col-sm-6" style="overflow: auto;">
                <div class="list-group">
                    <%  @notifications.each do |notification| %>
                      <% if notification.activities.count > 0 %>
                      <div class="list-group-item padding-1point5em">
                          <%= renderNotification(notification) %>
                      </div>
                      <% end %>
                    <% end %>
                </div>
            </div>
            <div class="right-container col-sm-6 card padding-1point5em"></div>
        </div>
</div>
