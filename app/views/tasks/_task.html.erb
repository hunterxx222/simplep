<div class="card-block">
  <p class="card-text">
  <%= task.name %> 
  <%= link_to "", project_task_path(@project, task), :method => :delete, class: "fa fa-trash "%>
  </p>
  <div class="row">
  </div>
  <hr>
  <div class="comments-wrapper">
    <div class="comments">
      <%= render "task_comments", task: task %>
    </div>
    <%= form_for [task, Comment.new], remote: true do |f| %>
      <div class="form-group">
        <%= f.text_field :content, placeholder: "Add a comment", autocomplete: 'off', rows: 5, class: "form-control" %>
        <%= f.submit class: "btn btn-success btn-circle text-uppercase" %>
      </div>
    <% end %>
    
    <div class="followers">
      <%= render "followers", task: task %>
    </div>
    <%= form_for [task, TaskFollower.new], remote: true do |f| %>
      <%= f.select :user_id, options_from_collection_for_select(User.all, "id", "email"), class: 'form-control' %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
