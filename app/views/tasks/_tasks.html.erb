            <div class="card-block table-responsive">
                <table class="table table-hover">
                    <tr>
                        <th>Owner</th>
                        <th>Name</th>
                        <th>Date</th>
                    </tr>
                    <% tasks.each do |task| %>
                      <%# Check if task is header task then mark it specially  %>
                      <% if task.name.last == ":" %>
                        <tr style="border-bottom:0.5px solid #d7dde4;">
                          <td colspan="3">
                            <h5><strong><%= link_to task.name, project_task_path(task.project, task), remote:true, class: 'header-task'%></strong></h5>
                          </td>
                        </tr>
                      <% else %>
                      <tr>
                        <td>
                        <%# if task has owner then show the avatar %>
                          <% if task.owner %>
                            <%= image_tag(task.owner.avatar, class: "round-image-16") %>
                          <% end %>
                        </td>
                        <td>
                        <%# if task is completed then strikethrough it  %>
                          <% if task.isCompleted? %>
                            <s><%= link_to task.name, project_task_path(task.project, task), remote:true%></s>
                          <% else %>
                            <%= link_to task.name, project_task_path(task.project, task), remote:true%>
                          <% end %>
                        </td>
                        <td>
                          <%= deadline_warning(task) %>
                        </td>
                      </tr>
                      <% end %>
                    <% end %>

                </table>
            </div><!-- /.box-body -->
